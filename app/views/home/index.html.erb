    style="background-image: url(<%= asset_path 'breads_bg_mobile.png' %>)"
  ></div>

  <div class="card bg-base-100 shadow-2xl w-full max-w-md text-center">
    <div class="card-body p-8">
      <h1 class="text-3xl font-bold text-base-content leading-tight">
        パンカビお知らせアプリ<br>
        <span class="text-primary">Pankabi</span>
      </h1>

      <p class="text-base-content/70 mt-2">
        パンの在庫と期限を<br>
        カンタン管理
      </p>

      <div class="mt-8 flex flex-col gap-4">
        <%= link_to "今すぐ使う（会員登録なし）", "#",
          class: "btn btn-primary btn-lg rounded-xl transition-transform active:scale-95" %>

        <div class="grid grid-cols-2 gap-3">
          <%= link_to "新規登録", "#",
            class: "btn btn-outline btn-secondary rounded-lg" %>
          <%= link_to "ログイン", "#",
            class: "btn btn-outline btn-secondary rounded-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>