<header class="flex justify-between items-center p-4 bg-base-100 shadow">
  <!-- ページタイトル -->
  <h1 class="text-xl font-semibold"><%= yield(:page_title) || "Pankabi" %></h1>

  <!-- 右上アイコン群 -->
  <div class="flex items-center space-x-4">
    <!-- 通知ベル -->
    <%= link_to "#", onclick: "alert('準備中です'); return false;" do %>
      <svg class="w-6 h-6 text-neutral-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
      </svg>
    <% end %>

    <!-- 設定アイコン -->
    <%= link_to settings_path do %>
      <svg class="w-6 h-6 text-neutral-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    <% end %>
  </div>
</header>
